@using (Ajax.BeginForm("CalcWalls", new AjaxOptions { UpdateTargetId = "reswalls" }))
{
    <div class="betweenBlock">
        <div class="betweenBlockWidth"><span>Вид фасада</span></div>
        <div>
            <select name="side">
                <option>С, В, С-В, С-З</option>
                <option>Ю, З, Ю-В, Ю-З</option>
            </select>
        </div>
    </div>
    <div class="betweenBlock">
        <div class="betweenBlockWidth"><span>Общая площадь, кв.м.</span></div>
        <div>
            <input type="text" name="f" required />
        </div>
    </div>
    <div class="betweenBlock">
        <div class="betweenBlockWidth"><span>Материал</span></div>
        <div>
            <select class="prod" name="l">
                @foreach (AirCondSystem.Models.Wall b in Model)
                {
                    <option>
                        @b.Name
                    </option>
                }
            </select>
            <input type="text" value="0"/>
        </div>
    </div>
    <div class="betweenBlock">
        <div class="betweenBlockWidth"><span>Толщина стены, м.</span></div>
        <div>
            <input type="text" name="j" required />
        </div>
    </div>
    <div class="btnCalc">
        <input type="submit" value="Расчет" class="btn btn-default" />
    </div>

    <div id="reswalls">

    </div>

    <hr />
}